@import "dist/index.wxss";
@import "utils/fontawesome.wxss";
@import "wxParse/wxParse.wxss";

/**app.wxss**/

.link{
  color:#dd6f8c;
}

.hr-line {
  height: 0px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  border-bottom: 1px solid rgba(255, 255, 255, 0.3);
}

.container {
  background: #f9f9f9;
  overflow: hidden;
  min-height: 100vh;
  box-sizing: border-box;
  padding: 15px 0;
}

.container::before {
  position: fixed;
  top: 0;
  left: 0;
  content: ' ';
  width: 100%;
  height: 1rpx;
  background-color: #e2e2e2;
  z-index: 5;
}

.doc-title {
  position: relative;
  padding: 15px 0;
  margin: 10px 15px;
  line-height: 25px;
  font-size: 25px;
  color: #666;
}

.doc-description {
  margin: 14px 0;
  padding: 0 15px;
  font-size: 14px;
  line-height: 20px;
  color: #666;
}

.avatar {
  width: 2.5em;
  height: 2.5rem;
  border-radius: 50%;
}

.avatar-big {
  width: 3.4rem;
  height: 3.4rem;
  border-radius: 50%;
}

.avatar-small {
  width: 1.5rem;
  height: 1.5rem;
  border-radius: 50%;
}

.avatar-tiny{
  width: 1.2rem;
  height: 1.2rem;
  border-radius: 50%;
}

.icons-bar {
  font-size: 0.8rem;
}

.icons-quote {
  font-size: 0.6rem;
  padding-left: 1rem;
  margin-bottom: 0.5rem;
}

.message-list-images {
  width: 7rem;
  height: 7rem;
  padding: 0.2rem;
  display: flex;
  flex-wrap: wrap;
  border-radius: 0.5rem;
}

.single-image {
  max-height: 10rem;
  border-radius: 0.3rem;
  width: 100%;
}

.message-header {
  padding-left: 1rem;
  padding-top: 0.5rem;
}

.card-quoted {
  margin-top: 0.7rem;
  border: 1px solid #dae2ea;
  border-radius: 0.3rem;
  max-height: 4.7rem;
}

.quote-iamge {
  height: 4.7rem;
  width: 100%;
}

.quote-inner {
  min-height: 4rem;
  padding-top: 0.3rem;
  padding-right: 0.8rem;
  padding-left: 1rem;
  padding-bottom: 0.3rem;
}

.quote-body {
  max-height: 1.9rem;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 130%;
}

.quote-arrow {
  position: relative;
  margin-top: 2.2rem;
  font-size: 3rem;
}

