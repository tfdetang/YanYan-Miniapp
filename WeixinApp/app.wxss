@import "dist/index.wxss";
@import "utils/fontawesome.wxss";

/**app.wxss**/

.container {
  background: #f9f9f9;
  overflow: hidden;
  min-height: 100vh;
  box-sizing: border-box;
  padding: 15px 0;
}

.container::before {
  position: fixed;
  top: 0;
  left: 0;
  content: ' ';
  width: 100%;
  height: 1rpx;
  background-color: #e2e2e2;
  z-index: 5;
}

.doc-title {
  position: relative;
  padding: 15px 0;
  margin: 10px 15px;
  line-height: 25px;
  font-size: 25px;
  color: #666;
}

.doc-description {
  margin: 14px 0;
  padding: 0 15px;
  font-size: 14px;
  line-height: 20px;
  color: #666;
}

.avatar {
  width: 2.5em;
  height: 2.5rem;
  border-radius: 50%;
}

.icons-bar {
  font-size: 0.8rem;
}

.message-list-images {
  width: 7rem;
  height: 7rem;
  padding: 0.2rem;
  display: flex;
  flex-wrap: wrap;
}
