/* pages/moment/moment.wxss */

.moment-page {
  position: relative;
  height: 100%;
}

.moment-img {
  position: absolute;
  opacity: 1;
}

.moment-body{
  margin-right:2rem;
}

.text-pannel {
  width: 100%;
  padding-left: 1rem;
  padding-right: 1rem;
  position: absolute;
  z-index: 99;
  top: 30%;
  margin-left: auto;
  margin-right: auto;
  color: white;
}

.trans-pannel {
  width: 100%;
  padding-left: 1rem;
  padding-top:4rem;
  padding-bottom: 2rem;
  position: absolute;
  z-index: 99;
  bottom: 0;
  color: white;
  padding-right: 1rem;
  background-image: linear-gradient(to bottom, rgba(0,0,0,0), rgba(0,0,0,1));
}

.quote-pannel {
  margin-top:1rem;
  margin-right:3rem;
  padding-top:0.5rem;
  padding-bottom:1rem;
  padding-left:1rem;
  padding-right:1rem;
  background-color: rgba(200, 200, 200, 0.3);
  border-radius: 0.3rem;
}

.page-img {
  background-image: linear-gradient(to bottom, #393232, white, #393232);
}

.page-black {
  background-image: radial-gradient(farthest-side at 80% 80%, #4d4545, #393232);
}

.icons {
  padding-top: 1rem;
}
