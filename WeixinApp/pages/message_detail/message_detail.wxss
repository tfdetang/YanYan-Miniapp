/* pages/message_detail/message_detail.wxss */

.detail-list-images {
  width: 8rem;
  height: 8rem;
  padding: 0.2rem;
  display: flex;
  flex-wrap: wrap;
  border-radius: 0.5rem;
}

.reply-list-images {
  width: 6rem;
  height: 6rem;
  padding: 0.2rem;
  display: flex;
  flex-wrap: wrap;
  border-radius: 0.5rem;
}

.reply-single-image {
  max-height: 15rem;
  border-radius: 0.3rem;
}

.zan-panel{
  position: relative;
  margin-top:0;
  padding-top: 0;
}

.detail-single-image {
  max-height: 40rem;
  padding-top: 0.5rem;
  border-radius: 0.3rem;
  width: 100%;
}

.detail-panel {
  padding-left: 1rem;
  padding-right: 1rem;
  padding-top: 1rem;
}

.detail-body {
  word-break: break-all;
  line-height: 160%;
  margin-bottom: 0.5rem;
}

.reply{
  margin-bottom: 0.2rem;
}

.icons-bar-big{
  font-size: 1rem;
}

.icons-bar-detail {
  padding-top: 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 1px solid rgba(100, 100, 100, 0.2);
  font-size: 1rem;
  background: #f7f7f7;
}

.card-quoted {
  margin-top: 0.7rem;
  border: 1px solid #dae2ea;
  border-radius: 0.3rem;
  max-height: 5.8rem;
}

.quote-iamge {
  height: 5.8rem;
  width: 100%;
}

.quote-inner {
  padding-top: 0.4rem;
  padding-right: 0.4rem;
  padding-left: 1rem;
  padding-bottom: 0.4rem;
}

.quote-body {
  max-height: 4rem;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  line-height: 130%;
}

.comment-area {
  padding-left: 1rem;
  padding-right: 1rem;
  padding-bottom: 1rem;
  margin-bottom: 2rem;
}

.reply-line{
  margin-left: 2rem;
  height: 2rem;
  border-left: 1px dashed rgba(150,150, 150, 0.3)
}


.reply-card {
  margin-top: 0.7rem;
  background-color: #eeeeee;
  border-radius: 0.3rem;
}

.avatar-reply {
  width: 1.8em;
  height: 1.8rem;
  border-radius: 50%;
}

.reply-input {
  border-top: 1px solid rgba(150,150, 150, 0.3);
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color:white;
}

.reply-tools{
  padding-bottom:0.5rem
}

.tools-img{
  margin-top: -1.2rem;
  height: 6rem;
}

.uploaded-img{
  height:4.6rem;
  padding: 0.2rem;
}

.swiper-img{
  height: 4.2rem;
  width: 4.2rem;
  box-shadow: 1px 2px 3px 1px rgba(100,100,100,0.3)
}

.badge-close{
  border-radius: 50%;
  background: rgba(0,0,0,0.6);
  color: rgba(255,255,255,0.6);
  width: 1rem;
  height: 1rem;
  position: relative;
  top: 25%;
  left: 3%;
  z-index: 100;
  font-size:1.9rem;
}

.close{
  position: relative;
  font-size: 0.7rem;
  left:0.2rem;
  top:0.1rem
}

.tool-logo{
  margin-top:0.3rem;
  text-align: center;
  border-right: 1px solid rgba(100, 100, 100, 0.2);
  color: #647989
}

.reply-textarea {
  border-bottom: 1px solid #dd6f8c;
  margin-bottom: 0.4rem
}

.zan-btn {
  border-radius: 0.2rem;
}

.reply-tools{
  margin-bottom: 0.3rem;
}
