/**index.wxss**/

.edit-button {
  border-radius: 50%;
  color: white;
  background-color: #dd6f8c;
  width: 3.5rem;
  height: 3.5rem;
  position: fixed;
  bottom: 5%;
  right: 5%;
  z-index: 100;
  box-shadow: 1px 3px 8px 1px rgba(50, 50, 50, 0.3);
}

.edit-logo {
  position: absolute;
  top: 22%;
  left: 27%;
}

.img_item {
  padding: 0.4rem;
  width: 45%;
  display: inline-block;
  vertical-align: top;
}

.flow_img {
  border-radius: 10px;
}

.img_footer {
  margin-top:0.1rem;
  height: 3.6rem;
}

.img_header {
  height:1.3rem;
}

.headerText{
  font-size: 0.6rem;
  color: gray;
}

.messageText {
  font-size: 0.6rem;
  max-height: 1.8rem;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 135%;
  color: rgb(80,80,80)
}

.messageIcon{
  text-align:right;
  font-size: 0.5rem;
  color: gray
}
